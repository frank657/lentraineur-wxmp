/* pages/trainings/new/new.wxss */

.h2 {
  font-size: 18px;
  font-weight: bold;
}

/* Banner */

.banner {
  color: white;
  text-align: center;
  height: 150px;
  background-size: cover !important;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  /* position: fixed; */
  /* z-index: 2; */
  width: 100%;
}

.h2-header {
 color: black;
  font-size: 40rpx; 
  font-weight: bold;
  padding: 15px;}

.box {
  padding: 5px 20px;
  /* width: 100%; */
}

.user-input {
  /* width: 100%; */
  margin-bottom: 15rpx;
  border-radius: 3px;
  border: solid 1px rgba(0,0,0,0.1);
  padding: 0px 5px;
  font-size: 14px;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.1);
}

.input-height {
  height: 3em;
}

.upload-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  /* text-align: center; */
  font-size: 14px;
  color: rgba(0,0,0,0.4);
}

.img-upload-preview {
  width: 200px;
  height: 100px;
  border: solid 1px rgba(0,0,0,0.1);
  background-color: rgba(0,0,0,0.1);
  margin-bottom: 15px;
  background-size: cover;
  background-position: center;
}

.icon {
  width: 70px;
  height: 70px;
  padding: 0px 20px;
}

.icon-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.timeslot {
  border-top: solid 1px rgba(0,0,0,0.1);
  color: rgba(0,0,0,0.8);
  font-size: 14px;
  /* margin: 20px; */
  padding: 5px 20px;
}

.schedule-card {
  margin: 10px 0px;
  border-bottom: solid 1px rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 5px;
}
/* 
.schedule-time {
  flex-grow: 1;
} */

.schedule-btn {
  margin-bottom: 20px;
}

.bold {
  font-weight: bold;
}

.edit-icon {
  width: 20px;
  height: 20px;
}

.button-inline {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-half {
  width: 100%;
  margin: 5px;
}