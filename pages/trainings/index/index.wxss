/* pages/trainings/index/index.wxss */

/* Others */

.card-product {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}

.card-product image {
  height: 100%;
  width: 220px;
  object-fit: cover;
  /* background-size: cover;
  background-position: center; */
}

.card-product h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-product p {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}


/* Banner */

.banner {
  color: white;
  text-align: center;
  height: 150px;
  background-size: cover !important;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 2;
  width: 100%;
}

.banner > text {
  margin-bottom: 20px;
}

/* Search bar */

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}

/* Scroll */

.scroll-view {
  margin-bottom: 15px;
}

.scroll-row {
  display: flex;
  flex-direction: row;
  width: 680px;
  position: relative;
  margin-right: right;
}

.scroll-view-item_H image {
  width: 150px;
  height: 150px;
}

.sports,
.activities,
.page {
  z-index: 1;
  position: relative;
  top: 160px;
}


.bc_1 {
  margin-left: 15px;
}

.card-sport,
card-activity {
  text-align: center;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  overflow: hidden;
  width: 150px;
  margin-right: 15px;
  border-radius: 5px;
  height: 180px;
}

.border {
  border-bottom: 1px solid black;
  margin-left: 15px;
  margin-bottom: 10px;
}

/* Trainings */

.weui-media-box {
  height: 150px;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 5px;
  margin-bottom: 15px;
}

.weui-media-box__hd {
  width: 150px;
  height: 150px;
}

.weui-media-box__hd > image {
  width: 150px;
  height: 150px;
}

.weui-panel__hd {
  border-bottom: 1px solid black;
  margin-left: 15px;
  font-size: 18px;
  color: black;
  margin-top: 10px;
  margin-bottom: 15px;
}

.card-training {
  display: flex;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  overflow: hidden;
  height: 150px;
}

.weui-media-box__bd {
  padding-right: 5px;
}

.weui-media-box__price {
  /* position: absolute; */
  bottom: 10px;
  font-size: 14px;
}

.text-hour {
  font-size: 10px;
  color: grey;
}

.text-price {
  font-size: 16px;
  font-weight: bold;
}



