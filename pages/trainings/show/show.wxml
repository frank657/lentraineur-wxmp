  <view>
    <view>
      <text class='text-price'>Â¥{{price_per_hour}}</text><text class='text-hour' >/HOUR</text>
    </view>
    <view>*****</view>
  </view>
  <navigator url='../../bookings/new/new?training_id={{id}}' class="btn-flat picker">Check Availability</navigator>
  

</view>