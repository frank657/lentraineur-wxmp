/* pages/home/home.wxss */

/* background-image */

.background {
  width: 100vw;
  height:100vh;
}

.container {
  display: flex;
  height:100vh;
  width: 100vw;
  padding: 0px;
  position: relative;
  text-align: center;
}

/* Login button */

.profile {
  background-color: RGBA(101, 102, 201, 0.60);
  box-shadow: 1px 2px 4px 1px rgba(0, 0, 0,.10);
  border-radius: 50%;
  width: 91px;
  height: 91px;
  position: absolute;
  top: -45px;
  right: 146px;
}

.button {
  font-weight: bold; 
  width: 40%;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  background-color: radial-gradient( circle farthest-corner at 1.3% 2.8%,  rgba(239,249,249,1) 0%, rgba(182,199,226,1) 100.2% );
}

.button-hover {
  color: RGBA(101, 102, 201, 1.00);
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  background-color: radial-gradient( circle farthest-corner at 1.3% 2.8%,  rgba(239,249,249,1) 0%, rgba(182,199,226,1) 100.2% );
}

.card {
  box-shadow: 1px 2px 4px 1px rgba(0, 0, 0,.08);
  width: 100%;
  height: 300px;
  background-color:RGBA(247, 249, 252, 0.50);
  position: absolute;
  bottom: 0px;
  display: flex;
  align-items: center;
}

textarea {
  font-weight: bold;
  font-size: 26px;
  color: white;
  position: absolute;
  top: 100px;
}